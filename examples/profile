# Not /bin/sh?
if [ "$SHELL" != "/bin/sh" ]; then
	export DOSHELL="$SHELL"
fi

# Map ~/.ssh?
if [ -d "$HOME/.ssh" ]; then
	export DOSH_DOCKER_RUN_EXTRA_OPTS="--volume $HOME/.ssh:$HOME/.ssh"
fi
